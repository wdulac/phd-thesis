  file = {/home/dulacw/Zotero/storage/VACM36WJ/Atkinson et Holliday - 1977 - Tropical Cyclone Minimum Sea Level PressureMaximu.pdf;/home/dulacw/Zotero/storage/FEWHCYHJ/1520-0493_1977_105_0421_tcmslp_2_0_co_2.html}
}

@article{balaguru_increasing_2018,
  title = {Increasing {{Magnitude}} of {{Hurricane Rapid Intensification}} in the {{Central}} and {{Eastern Tropical Atlantic}}},
