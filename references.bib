	langid = {english},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/2014JD022417},
	keywords = {tropical cyclones, climate models, limited area models, reanalysis datasets, secondary circulation, warm core structure},
	file = {Full Text PDF:/home/dulacw/Zotero/storage/KRBJJ4EW/Zick et Matyas - 2015 - Tropical cyclones in the North American Regional R.pdf:application/pdf;Snapshot:/home/dulacw/Zotero/storage/YZYSA73V/2014JD022417.html:text/html},
