@article{broccoli_can_1990,
  title = {Can Existing Climate Models Be Used to Study Anthropogenic Changes in Tropical Cyclone Climate?},
  author = {Broccoli, A. J. and Manabe, S.},
  date = {1990},
  journaltitle = {Geophysical Research Letters},
  volume = {17},
