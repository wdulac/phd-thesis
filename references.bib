	author = {Emanuel, Kerry},
	urldate = {2021-09-16},
	date = {2000-04-01},
	note = {Publisher: American Meteorological Society
Section: Monthly Weather Review},
	file = {Full Text PDF:/home/dulacw/Zotero/storage/AZ5LDKE8/Emanuel - 2000 - A Statistical Analysis of Tropical Cyclone Intensi.pdf:application/pdf;Snapshot:/home/dulacw/Zotero/storage/SYXHA5LN/1520-0493_2000_128_1139_asaotc_2.0.co_2.html:text/html},
