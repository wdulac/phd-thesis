	number = {6},
	journaltitle = {Weather and Forecasting},
	author = {Davis, Christopher and Wang, Wei and Dudhia, Jimy and Torn, Ryan},
	urldate = {2021-02-05},
	date = {2010-12-01},
	note = {Publisher: American Meteorological Society
Section: Weather and Forecasting},
